<div class="sentiment">
    <h4>Your sentiment is...</h4>
    <p>😡🙁😐😃😍</p>

    <div class="marker">
        <div style="left: @Value%;">
            <div>▲</div>
            <label aria-label="Predicted sentiment is @Value.ToString("0.0")%">@Value.ToString("0.0")%</label>
        </div>
    </div>
</div>

@functions {
    [Parameter] float Value { get; set; }
}
